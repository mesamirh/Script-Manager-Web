#!/bin/bash

# Get the directory where this app bundle is located
APP_DIR="$(dirname "$(dirname "$(dirname "$0")")")"
PROJECT_DIR="$APP_DIR"

echo "â•”â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•—"
echo "â•‘         Script Manager Web           â•‘"
echo "â•‘           macOS Launcher             â•‘"
echo "â•šâ•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•"
echo
echo "ğŸ“‚ Project Directory: $PROJECT_DIR"
echo

# Change to project directory
cd "$PROJECT_DIR" || {
    echo "âŒ Error: Cannot access project directory"
    echo "   Expected: $PROJECT_DIR"
    read -p "Press Enter to exit..."
    exit 1
}

# Check if Node.js is installed
if ! command -v node &> /dev/null; then
    echo "âŒ ERROR: Node.js is not installed"
    echo "   Please install Node.js from https://nodejs.org/"
    echo
    read -p "Press Enter to exit..."
    exit 1
fi

echo "âœ… Node.js version: $(node --version)"
echo "âœ… npm version: $(npm --version)"
echo

# Check if dependencies are installed
if [ ! -d "node_modules" ]; then
    echo "ğŸ“¦ Installing dependencies..."
    npm install
    if [ $? -ne 0 ]; then
        echo "âŒ ERROR: Failed to install dependencies"
        read -p "Press Enter to exit..."
        exit 1
    fi
    echo
fi

echo "ğŸš€ Starting Script Manager Web Server..."
echo "ğŸŒ Server will be available at: http://localhost:3000"
echo "ğŸ”§ Press Ctrl+C to stop the server"
echo

# Start the server
node backend/server.js

# Keep terminal open on error
if [ $? -ne 0 ]; then
    echo
    echo "âŒ ERROR: Server failed to start"
    read -p "Press Enter to exit..."
fi
